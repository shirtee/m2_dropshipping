<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="shirtee">
        <job name="shirtee_order_sync" instance="Shirtee\Dropshipping\Cron\Order\Sync" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="shirtee_product_fetch" instance="Shirtee\Dropshipping\Cron\Product\Fetch" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="shirtee_product_create" instance="Shirtee\Dropshipping\Cron\Product\Create" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="shirtee_product_update" instance="Shirtee\Dropshipping\Cron\Product\Update" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="shirtee_product_remove" instance="Shirtee\Dropshipping\Cron\Product\Remove" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="shirtee_product_stock" instance="Shirtee\Dropshipping\Cron\Product\Stock" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="shirtee_product_rule" instance="Shirtee\Dropshipping\Cron\Product\Rule" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
    </group>
</config>
